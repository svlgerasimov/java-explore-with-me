	"item": [
		{
			"name": "Получение всех событий ожидающих модерации",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const main = async () => {\r",
							"    const api = new API(pm);\r",
							"    const rnd = new RandomUtils();\r",
							"\r",
							"    try {\r",
							"        const user = await api.addUser(rnd.getUser());\r",
							"        const category = await api.addCategory(rnd.getCategory());\r",
							"        const event1 = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
							"        const event2 = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
							"        const event3 = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
							"        const event4 = await api.addEvent(user.id, rnd.getEvent(category.id));\r",
							"\r",
							"        pm.collectionVariables.set('userId', user.id);\r",
							"        pm.collectionVariables.set('eventId1', event1.id);\r",
							"        pm.collectionVariables.set('eventId2', event2.id);\r",
							"        pm.collectionVariables.set('eventId3', event3.id);\r",
							"        pm.collectionVariables.set('eventId4', event4.id);\r",
							"\r",
							"        await api.publishEvent(event1.id);\r",
							"\r",
							"    } catch(err) {\r",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
							"    }\r",
							"};\r",
							"\r",
							"const interval = setInterval(() => {}, 1000);\r",
							"\r",
							"setTimeout(async () => \r",
							"    {\r",
							"        try {\r",
							"            // выполняем наш скрипт\r",
							"            await main();\r",
							"        } catch (e) {\r",
							"            console.error(e);\r",
							"        } finally {\r",
							"            clearInterval(interval);\r",
							"        }\r",
							"    },  \r",
							"    100 \r",
							");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 200\", function () {\r",
							"    pm.response.to.be.ok;    \r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"const target = pm.response.json();\r",
							"\r",
							"const eventId1 = pm.collectionVariables.get('eventId1');\r",
							"const eventId2 = pm.collectionVariables.get('eventId2');\r",
							"const eventId3 = pm.collectionVariables.get('eventId3');\r",
							"const eventId4 = pm.collectionVariables.get('eventId4');\r",
							"\r",
							"let founded1;\r",
							"let founded2;\r",
							"let founded3;\r",
							"let founded4;\r",
							"target.forEach(function(element){if (element.id == eventId1) founded1 = element});\r",
							"target.forEach(function(element){if (element.id == eventId2) founded2 = element});\r",
							"target.forEach(function(element){if (element.id == eventId3) founded3 = element});\r",
							"target.forEach(function(element){if (element.id == eventId4) founded4 = element});\r",
							"\r",
							"pm.test(\"В ответе должны быть неподтверждённые события\", function() {\r",
							"    pm.expect(founded1).to.be.equal(undefined, \"Не должно быть подтвержденных событий\");\r",
							"    pm.expect(founded2).not.to.be.equal(undefined, \"Должны быть все неподтверждённые события\");\r",
							"    pm.expect(founded3).not.to.be.equal(undefined, \"Должны быть все неподтверждённые события\");\r",
							"    pm.expect(founded4).not.to.be.equal(undefined, \"Должны быть все неподтверждённые события\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
